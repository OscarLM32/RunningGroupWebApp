
@using RunningGroupWebApp.ViewModels;

@model VMRegister

@{
    ViewData["Title"] = "Register";
}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<div class="container ">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-4">
            <form asp-controller="Account" asp-action="Register" class="form-signin">
                <h1 class="h3 mb-3 font-weight-normal text-center">Please sign up</h1>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <label asp-for="Email" class="sr-only">Email address</label>
                <input asp-for="@Model.Email" type="email" id="inputEmail" class="form-control mb-2"
                    placeholder="Email address" required autofocus>
                <span asp-validation-for="@Model.Email" class="text-danger" />

                <label asp-for="Password" class="sr-only">Password</label>
                <input asp-for="@Model.Password" type="password" id="inputPassword" class="form-control mb-3"
                    placeholder="Password" required>
                <span asp-validation-for="@Model.Password" class="text-danger" />

                <label asp-for="PasswordConfirmation" class="sr-only">Repeat Password</label>
                <input asp-for="@Model.PasswordConfirmation" type="password" id="inputPasswordConfirmation" class="form-control mb-3"
                    placeholder="Repeat Password" required>
                <span asp-validation-for="@Model.PasswordConfirmation" class="text-danger" />

                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>

                <p class="mt-5 mb-3 text-muted text-center">&copy; 2024-2025</p>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
