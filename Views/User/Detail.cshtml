@using RunningGroupWebApp.ViewModels;
@model VMUserDetails

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title text-center">User Details</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="UserName">Username</label>
                        <input type="text" class="form-control" id="UserName" value="@Model.UserName" readonly>
                    </div>

                    <div class="form-group">
                        <label for="Pace">Pace</label>
                        <input type="number" class="form-control" id="Pace" value="@Model.Pace" readonly>
                    </div>

                    <div class="form-group">
                        <label for="Mileage">Mileage</label>
                        <input type="number" class="form-control" id="Mileage" value="@Model.Mileage" readonly>
                    </div>

                    <div class="text-center">
                        <a href="#" class="btn btn-outline-secondary mt-3">Edit Details</a>
                        <a href="#" class="btn btn-danger mt-3">Delete Account</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
