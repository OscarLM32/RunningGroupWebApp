@using RunningGroupWebApp.ViewModels
@model VMEditUser

<form method="post" asp-action="EditUserProfile" enctype="multipart/form-data">
    
    <div class="form-group">
        <label asp-for="Pace">Pace</label>
        <input asp-for="Pace" type="text" class="form-control" placeholder="Enter title" value="@Model.Pace">
        <span asp-asp-validation-for="Pace" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mileage">Mileage</label>
        <input asp-for="Mileage" type="text" class="form-control" placeholder="Mileage" value="@Model.Mileage">
        <span asp-asp-validation-for="Mileage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="City">Street</label>
        <input asp-for="City" type="text" class="form-control" placeholder="City" value="@Model.City">
        <span asp-asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State">City</label>
        <input asp-for="State" type="text" class="form-control" placeholder="State" value="@Model.State">
        <span asp-asp-validation-for="State" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image">Image</label>
        <small>Upload an image if you desire to replace the current one.</small>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image link" value="@Model.Image">
        <span asp-asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>