@using RunningGroupWebApp.Data
@using RunningGroupWebApp.Models
@model IEnumerable<Club>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach(var club in Model){
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="@club.Image"/>
                        <div class="card-body">
                            <p class="card-text">@club.Title</p>
                            <p class="card-text">@club.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" asp-controller="Club" asp-action="Detail" asp-route-id="@club.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                    @if(User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
                                    {
                                        <a type="button" asp-controller="Club" asp-action="Edit" asp-route-id="@club.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a type="button" asp-controller="Club" asp-action="Delete" asp-route-id="@club.Id" class="btn btn-sm btn-danger">Delete</a>
                                    }
                                </div>
                                <small class="text-body-secondary">@club.ClubCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>