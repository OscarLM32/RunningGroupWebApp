@using RunningGroupWebApp.Data.Enum
@using RunningGroupWebApp.ViewModels
@model VMEditClub

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" class="form-control" placeholder="Enter title" value="@Model.Title">
        <span asp-asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" type="text" class="form-control" placeholder="Description" value="@Model.Description">
        <span asp-asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address.Street">Street</label>
        <input asp-for="Address.Street" type="text" class="form-control" placeholder="Street" value="@Model.Address.Street">
        <span asp-asp-validation-for="Address.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.City">City</label>
        <input asp-for="Address.City" type="text" class="form-control" placeholder="City" value="@Model.Address.City">
        <span asp-asp-validation-for="Address.City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address.State">State</label>
        <input asp-for="Address.State" type="text" class="form-control" placeholder="State" value="@Model.Address.State">
        <span asp-asp-validation-for="Address.State" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClubCategory">Category</label>
        <select asp-for="ClubCategory" asp-items="@(Html.GetEnumSelectList<ClubCategory>())" class="form-control">
            <option value="@Model.ClubCategory"></option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Image">Image</label>
        <small>Upload an image if you desire to replace the current one.</small>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image link" value="@Model.Image">
        <span asp-asp-validation-for="Image" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Address.Id" value="@Model.Address.Id"/>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>